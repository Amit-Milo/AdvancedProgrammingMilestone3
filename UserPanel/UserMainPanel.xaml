<UserControl x:Class="FlightSimulatorApp.UserPanel.UserMainPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.UserPanel"
             xmlns:Connection="clr-namespace:FlightSimulatorApp.UserPanel.Connection"
             xmlns:Errors="clr-namespace:FlightSimulatorApp.UserPanel.Errors"
             xmlns:Controllers="clr-namespace:FlightSimulatorApp.UserPanel.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="mainUserPanel">
        <Grid.RowDefinitions>
            <!-- the controllers panel -->
            <RowDefinition Height="Auto"/>
            <!-- the connection panel -->
            <RowDefinition Height="Auto"/>
            <!-- the error messages panel -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- all panel are added via the code behind because their constructor has parameters -->

    </Grid>
</UserControl>
